page {
  background-color: #dedede;
  padding: 20rpx;
}
.search_row {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
}
.search_row input {
  flex: 1;
  background-color: #fff;
  height: 100%;
  padding-left: 30rpx;
}
.search_row button:not([size="mini"]) {
  width: 110rpx;
  height: 100%;
  font-style: 26rpx;
  padding: 0;
  font-weight: normal;
  margin: 0 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search_content {
  margin-top: 30rpx;
}
.search_content .search_item {
  background-color: #fff;
  font-size: 26rpx;
  padding: 15rpx 10rpx;
  border-bottom: 1px solid #ccc;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
