/* pages/feedback/index.wxss */
page {
  background-color: #eee;
}
.fb_main {
  padding: 20rpx;
  color: #666;
}
.fb_main .fb_tips {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_tips text {
  width: 30%;
  padding: 10rpx;
  text-align: center;
  background-color: #fff;
  margin: 20rpx 10rpx;
}
.fb_main .fb_content {
  background: #fff;
  margin-top: 20rpx;
}
.fb_main .fb_content textarea {
  padding: 10rpx;
}
.fb_main .fb_content .fb_tool {
  display: flex;
  flex-wrap: wrap;
}
.fb_main .fb_content .fb_tool button {
  width: 90rpx;
  height: 90rpx;
  padding: 0rpx;
  font-size: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  color: #ccc;
}
.fb_main .fb_content .fb_tool .up_img_item {
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.fb_main .form_btn_wrap {
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
}
.fb_main .form_btn_wrap button {
  display: flex;
  margin: 0;
  align-items: center;
  justify-content: center;
  width: 40%;
  font-size: 40rpx;
  font-weight: normal;
}
